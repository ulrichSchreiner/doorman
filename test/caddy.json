{
    "logging": {
        "logs": {
            "default": {
                "level": "debug"
            }
        }
    },
    "admin": {
        "disabled": false
    },
    "apps": {
        "doorman": {
            "imprint_url": "http://www.example.com/imprint",
            "privacy_policy_url": "http://www.example.com/privacy",
            "spacing": "",
            "operation_mode": "token",
            "captcha_mode": "math",
            "issuer": "Doorman",
            "issuer_base": "http://localhost:2015",
            "token_duration": "60s",
            "access_duration": "60s",
            "users": [
                {
                    "type": "list",
                    "name": "static users",
                    "spec": [
                        {
                            "name": "Max Muster",
                            "uid": "mmu",
                            "mobile": "0049123456789",
                            "email": "max.muster@example.com"
                        }
                    ]
                },
                {
                    "type": "file",
                    "name": "file users",
                    "spec": {
                        "path": "test/users.json",
                        "watch": true
                    }
                },
                {
                    "type": "ldap",
                    "name": "test ldap backend",
                    "spec": {
                        "address": "localhost:6389",
                        "search_base": "dc=example,dc=org",
                        "user": "cn=admin,dc=example,dc=org",
                        "password": "test1234",
                        "tls": false,
                        "insecure_skip": true,
                        "telephone_attribute": "telephoneNumber"
                    }
                }
            ],
            "whitelist": [
                {
                    "type": "list",
                    "name": "static list of ips",
                    "spec": [
                        "127.0.0.2",
                        "::2"
                    ]
                }
            ],
            "cookie_block": "S+lyDRL0/sFKNmTtiD2/T4W8J5x3ur2zQY6jK4J08PM=",
            "cookie_hash": "tga7Y9FC/4R8lm6abiPZCbqOYS4Pz4H4ql6AoIx6yMMmLSZhrS4ZihiLKlTl5Bcjx8fBkuWE4FDkvdISeVEjNQ==",
            "insecure_cookie": true,
            "channels": [
                "wl-clipboard",
                "standard-smtp",
                "smsgateway",
                "local url tester",
                "mailgun"
            ],
            "messenger_config": {
                "burst": 20,
                "rate": "1s",
                "from": {
                    "name": "Doorman",
                    "email": "doorman@innuendo.de"
                },
                "transports": [
                    {
                        "type": "url",
                        "name": "smsgateway",
                        "spec": {
                            "url_template": "{env.SMS_GATEWAY_URL1}&body=\\{\\{.message}}&from=Doorman&to=\\{\\{.tomobile}}",
                            "method": "GET",
                            "insecure": false
                        }
                    },
                    {
                        "type": "command",
                        "name": "wl-clipboard",
                        "spec": {
                            "command": "/usr/bin/wl-copy",
                            "use_stdin": true,
                            "wait": false,
                            "args": []
                        }
                    },
                    {
                        "type": "command",
                        "name": "clipboard",
                        "spec": {
                            "command": "/usr/bin/xsel",
                            "use_stdin": true,
                            "args": [
                                "-i",
                                "-b"
                            ]
                        }
                    },
                    {
                        "type": "url",
                        "name": "local url tester",
                        "spec": {
                            "url_template": "http://localhost:9999?to=\\{\\{.tomobile}}&msg=Token:+\\{\\{.message}}",
                            "method": "GET",
                            "insecure": false
                        }
                    },
                    {
                        "type": "url",
                        "name": "mailgun",
                        "spec": {
                            "url_template": "https://api.mailgun.net/v3/{env.MG_DOMAIN}/messages",
                            "body_template": "from=Token Verifier %3Cauth@{env.MG_DOMAIN}%3E&to=\\{\\{.to}}&text=\\{\\{.message}}&subject='Your Login'",
                            "method": "POST",
                            "insecure": false,
                            "auth_user": "api",
                            "auth_password": "{env.MG_API_KEY}",
                            "headers": {
                                "Content-Type": [
                                    "application/x-www-form-urlencoded"
                                ]
                            }
                        }
                    },
                    {
                        "type": "email",
                        "name": "standard-smtp",
                        "spec": {
                            "host": "{env.SMTP_SERVER}",
                            "user": "{env.SMTP_SERVER_USER}",
                            "password": "{env.SMTP_SERVER_PASSWORD}"
                        }
                    }
                ]
            },
            "store_settings": {
                "persistent_type": "redis",
                "memory_cache_mb": 300,
                "redis": {
                    "address": "localhost:16379"
                },
                "otp": {
                    "timeout": "5m",
                    "transport": {
                        "type": "email",
                        "name": "my-smtp",
                        "spec": {
                            "host": "{env.SMTP_SERVER}",
                            "user": "{env.SMTP_SERVER_USER}",
                            "password": "{env.SMTP_SERVER_PASSWORD}"
                        }
                    }
                }
            }
        },
        "tls": {
            "certificates": {
                "load_files": [
                    {
                        "certificate": "./test/server.crt",
                        "key": "./test/server.key",
                        "tags": [
                            "default"
                        ]
                    }
                ]
            }
        },
        "http": {
            "servers": {
                "example": {
                    "listen": [
                        "0.0.0.0:2015"
                    ],
                    "automatic_https": {
                        "disable": false,
                        "disable_redirects": true
                    },
                    "tls_connection_policies": [
                        {
                            "certificate_selection": {
                                "any_tag": [
                                    "default"
                                ]
                            }
                        }
                    ],
                    "routes": [
                        {
                            "handle": [
                                {
                                    "handler": "doorman"
                                },
                                {
                                    "handler": "reverse_proxy",
                                    "transport": {
                                        "protocol": "http",
                                        "tls": {
                                            "server_name": "httpbin.org"
                                        }
                                    },
                                    "upstreams": [
                                        {
                                            "dial": "httpbin.org:443"
                                        }
                                    ],
                                    "headers": {
                                        "request": {
                                            "set": {
                                                "Host": [
                                                    "{http.reverse_proxy.upstream.hostport}"
                                                ]
                                            }
                                        }
                                    },
                                    "health_checks": {
                                        "active": {
                                            "path": "/",
                                            "expect_status": 200
                                        }
                                    }
                                },
                                {
                                    "handler": "static_response",
                                    "body": "Hello, world!"
                                }
                            ]
                        }
                    ]
                }
            }
        }
    }
}